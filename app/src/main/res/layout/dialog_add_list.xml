<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.udacity.firebase.shoppinglistplusplus.ui.MainActivity">

    <EditText
        android:id="@+id/edit_text_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="@string/hint_add_event_list"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/edit_text_list_name"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/et_search"
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:hint="Search Location"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true">
    </EditText>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:background="@drawable/search"
        android:nestedScrollingEnabled="false"
        android:layout_alignBottom="@+id/et_search"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/btnSearch"
        android:layout_alignParentStart="true" />
</RelativeLayout>
